{% extends "base.html.twig" %}

{% block content %}
    {{ component('month_navigation', { active: playDate.month.key , urlKey: 'schedule'}) }}
    <h4 class="pt-3">Clowns zu Spieltermin einteilen</h4>
    <h5>
        Am {{ playDate.date|date('d.m.Y') }} {{ playDate.daytime == 'am' ? 'vormittags' : 'nachmittags' }}
        - {{ playDate.isSpecial ? playDate.title : playDate.venue.name }}
    </h5>

    {{ component('show_available_clowns', { date: playDate.date, daytime: playDate.daytime }) }}
    {{ form(form) }}
{% endblock %}
