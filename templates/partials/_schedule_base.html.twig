{% for day in schedule.days %}
    <div class="row {{ day.free or day.vacation ? 'bg-secondary bg-opacity-10'}}" title="{{ day.weekend ? 'Wochenende' : (day.vacation ? day.vacationName )}}">
        <div class="col-6 col-sm-1 border">
            {% if day.free %}<strong class="text-primary">{% endif %}
                {{ day.dayNumber }}
            {% if day.free %}</strong>{% endif %}
        </div>
        <div class="col-6 col-sm-1 border" title="{{ day.dayName }}">
            {% if day.free %}<strong class="text-primary">{% endif %}
            {{ day.dayShortName }}
            {% if day.free %}</strong>{% endif %}
        </div>

        <div class="col-sm-5 border">
            {% block am %}{% endblock %}
        </div>
        <div class="col-sm-5 border">
            {% block pm %}{% endblock %}
        </div>
    </div>
{% endfor %}
